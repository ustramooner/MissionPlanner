#!/usr/bin/make -f
# Sample debian/rules file - for GNU Hello.
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself. (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)
# This file may have to be extensively modified
# 
# Modified for use with MissionPlanner by Ben van Klinken

package = missionplanner
docdir = debian/tmp/usr/share/doc/$(package)

CC = gcc
CFLAGS = -g -Wall
INSTALL_PROGRAM = install

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

build:
	$(checkdir)
	./debian/gitlog-to-changelog.pl > ./debian/changelog
	mkdir -p debian/tmp/usr/lib/missionplanner
	cp ./ExtLibs/System.Speech.dll debian/tmp/usr/lib/missionplanner/System.Speech.dll
	xvfb-run xbuild /property:OutputPath=`pwd`/debian/tmp/usr/lib/missionplanner/ /property:DefineConstants=SQLite,MONO,noDIRECTX /p:Configuration=Release ArdupilotMega.sln
	touch build

clean:
	$(checkdir)
	rm -f build
	bash clean.sh
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep: checkroot build
	$(checkdir)
	# There are no architecture-independent files to be uploaded
	# generated by this package. If there were any they would be
	# made here.

binary-arch: checkroot build
	$(checkdir)
	rm -rf debian/tmp
	install -d debian/tmp/DEBIAN "$(docdir)"
	cp debian/control debian/tmp/DEBIAN
	install -m 755 debian/postinst debian/postrm debian/tmp/DEBIAN
	mkdir -p debian/tmp/usr/lib/missionplanner
	cp ./ExtLibs/System.Speech.dll debian/tmp/usr/lib/missionplanner/System.Speech.dll
	xvfb-run xbuild /property:OutputPath=`pwd`/debian/tmp/usr/lib/missionplanner/ /property:DefineConstants=SQLite,MONO,noDIRECTX /p:Configuration=Release ArdupilotMega.sln
	cp -a debian/copyright "$(docdir)/copyright"
	cp -a debian/changelog "$(docdir)/changelog"
	install -m 644 -D ./debian/MissionPlanner.desktop debian/tmp/usr/share/applications/missionplanner.desktop
	install -m 644 -D ./debian/MissionPlanner debian/tmp/usr/share/menu/missionplanner
	#remove unused files
	rm -rf debian/tmp/usr/lib/missionplanner/Drivers
	#these fail lintian
	rm debian/tmp/usr/lib/missionplanner/Lib/cgi.py
	rm debian/tmp/usr/lib/missionplanner/Lib/site-packages/scipy/special/utils/makenpz.py
	rm debian/tmp/usr/lib/missionplanner/licence.rtf
	find debian/tmp -name '*~' | xargs -r rm
	rm -rf debian/tmp/.git
	#install icons
	install -D -m 644 ./mpdesktop.ico debian/tmp/usr/share/icons/hicolor/32x32/apps/missionplanner.png

	cd "$(docdir)" && gzip -9 changelog
	dpkg-gencontrol -isp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg-deb --build debian/tmp ..

define checkdir
	test -f ArdupilotMega.sln -a -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test $$(id -u) = 0

.PHONY: binary binary-arch binary-indep clean checkroot
